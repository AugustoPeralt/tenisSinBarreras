# Environment Variables Template

# Copy this file to .env.local in each app directory and fill in your values

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# API Keys for Travel Services
SKYSCANNER_API_KEY=your_skyscanner_api_key
BOOKING_API_KEY=your_booking_com_api_key
EXPEDIA_API_KEY=your_expedia_api_key
KIWI_API_KEY=your_kiwi_api_key

# Application Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_for_production

# Optional: Analytics and Monitoring
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=your_ga_id
SENTRY_DSN=your_sentry_dsn

# Optional: Email Services
SENDGRID_API_KEY=your_sendgrid_api_key
RESEND_API_KEY=your_resend_api_key
